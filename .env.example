# Event Platform Environment Variables
# Copy this file to .env.local and fill in the values

# =============================================================================
# PUBLIC VARIABLES (exposed to browser)
# =============================================================================

# Base URL for the application (used for canonical URLs, OG tags, etc.)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Firebase Web Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=

# =============================================================================
# SERVER-ONLY VARIABLES (never exposed to browser)
# =============================================================================

# Database (Supabase Postgres)
# Pooled connection string (for application queries)
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:6543/postgres?pgbouncer=true
# Direct connection string (for migrations)
DIRECT_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres

# =============================================================================
# LOCAL DEVELOPMENT (Supabase Local)
# =============================================================================

# For local development with Supabase (npm run supabase:start):
# DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres
# DIRECT_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres

# =============================================================================
# LOCAL DEVELOPMENT (Mailpit SMTP)
# =============================================================================

# Set SMTP_HOST to use Mailpit instead of Mailgun for local email testing
# Start Mailpit first with: npm run mailpit (or docker)
# View emails at: http://localhost:8025
# SMTP_HOST=127.0.0.1
# SMTP_PORT=1025

# Firebase Admin SDK (not needed when using emulator with demo project)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
# Note: Replace \n with actual newlines in your .env.local
FIREBASE_PRIVATE_KEY=

# =============================================================================
# LOCAL DEVELOPMENT (Firebase Emulator)
# =============================================================================

# Set these to use Firebase Auth Emulator instead of production Firebase
# Start emulator first with: npm run emulators
# Then start dev server with: npm run dev:local
# FIREBASE_AUTH_EMULATOR_HOST=127.0.0.1:9099
# NEXT_PUBLIC_FIREBASE_AUTH_EMULATOR_HOST=127.0.0.1:9099

# Mailgun (transactional email)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=mg.eventsfixer.com
# Use https://api.mailgun.net for US, https://api.eu.mailgun.net for EU
MAILGUN_REGION_BASE_URL=https://api.mailgun.net
MAILGUN_WEBHOOK_SIGNING_KEY=
MAIL_FROM=Events <noreply@eventsfixer.com>

# =============================================================================
# CRON JOBS (Vercel Cron)
# =============================================================================

# Secret for authenticating Vercel Cron job requests
# Generate with: openssl rand -base64 32
CRON_SECRET=

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================

# Rate Limiting (Upstash Redis)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Error Tracking (Sentry)
SENTRY_DSN=
